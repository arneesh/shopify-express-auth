{
    "compileOnSave": false,
    "compilerOptions": {
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "pretty": true,
      "moduleResolution": "node",
      "target": "es5",
      "downlevelIteration": true,
      "esModuleInterop": true,      
      "strictNullChecks": true,
      "noImplicitAny": false,
      "sourceMap": false,
      "noEmitOnError": false,
      "experimentalDecorators": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "importHelpers": true,
      "noImplicitThis": true,
      "resolveJsonModule": true,

      "lib": [
        "dom",
        "dom.iterable",
        "es2015",
        "es2016",
        "es2017",
        "es2018",
        "esnext.asynciterable"
      ],
      "typeRoots": ["./@types", "../node_modules/@types"],
      "outDir": "./dist",
      "baseUrl": ".",
      "rootDir": "."
    },
    "include": [
      "../../config/typescript/**/*",
      "./src/**/*.ts",
      "./src/**/*.tsx"
    ],
    "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/test_helper.ts", "**/test/*"]
  }